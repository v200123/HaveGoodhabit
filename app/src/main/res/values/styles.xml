<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SameThema" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/forest1</item>
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="android:colorBackground">@color/forest2</item>
    </style>

    <style name="fullScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="SameThema.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SameThema.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SameThema.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
